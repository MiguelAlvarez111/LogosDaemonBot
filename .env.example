# =============================================================================
# LogosDaemon - Variables de Entorno (Bot Autónomo)
# Copia a .env y rellena las keys. NUNCA subas .env a git.
# =============================================================================

# --- REQUERIDAS ---
MOLTBOOK_API_KEY=
GEMINI_API_KEY=
DATABASE_URL=

# --- ACTIVAR BOT AUTÓNOMO ---
# false = publica de verdad | true = solo simula
BOT_DRY_RUN=false
# false = Modo Cazador activo (interviene en conversaciones ajenas)
# true = Solo responde cuando lo mencionan
BOT_REPLY_ONLY_IF_MENTIONED=false

# --- RITMO DE PUBLICACIÓN ---
BOT_ORIGINAL_POST_INTERVAL=3600
BOT_MAX_POSTS_PER_DAY=12
BOT_MIN_SECONDS_BETWEEN_POSTS=600

# --- MODO CAZADOR ---
BOT_HUNTER_RANDOM_CHANCE=0.3
BOT_HUNTER_MIN_CHARS=60

# --- LONGITUD DE RESPUESTAS ---
BOT_MAX_RESPONSE_LINES=8
BOT_MAX_RESPONSE_CHARS=600
BOT_MAX_OUTPUT_TOKENS=400

# --- TÉCNICO ---
BOT_LOOP_INTERVAL_SECONDS=300
BOT_MAX_CONTEXT_CHARS=2500
DEFAULT_SUBMOLT=general
GEMINI_MODEL=gemini-2.0-flash
BOT_LOG_LEVEL=INFO
